{
  "compilerOptions": {
    "jsx": "react",
    "lib": [
      "ES2019"
    ],
    "module": "commonjs",
    "target": "ES2019",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "typeRoots": [
      "./node_modules/@types",
      "./type-definitions"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "."
  ],
  "extends": "expo/tsconfig.base"
}
